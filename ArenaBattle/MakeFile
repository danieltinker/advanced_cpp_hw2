# Makefile for ArenaBattle “tanks_game”
CXX       := g++
CXXFLAGS  := -std=c++20 -Wall -Wextra -Werror -pedantic \
              -Iinclude -Icommon -I.

SRCDIR    := src
SOURCES   := $(wildcard $(SRCDIR)/*.cpp) 
OBJECTS   := $(SOURCES:.cpp=.o)
TARGET    := tanks_game

.PHONY: all clean

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $@ $^

# compile each .cpp → .o in-place
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c -o $@ $<

clean:
	rm -f $(SRCDIR)/*.o $(TARGET)
